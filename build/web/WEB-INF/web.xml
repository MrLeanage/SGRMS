<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!--Servlets-->
    <servlet>
        <servlet-name>LoginControllerServlet</servlet-name>
        <servlet-class>com.grms.presentation.userManagement.LoginControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserAccountControllerServlet</servlet-name>
        <servlet-class>com.grms.presentation.userManagement.UserAccountControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GuidelineControllerServlet</servlet-name>
        <servlet-class>com.grms.presentation.guidelineManagement.GuidelineControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GrievanceControllerServlet</servlet-name>
        <servlet-class>com.grms.presentation.grievanceManagement.GrievanceControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FeedbackControllerServlet</servlet-name>
        <servlet-class>com.grms.presentation.feedbackManagement.FeedbackControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StatisticControllerServlet</servlet-name>
        <servlet-class>com.grms.presentation.statisticManagement.StatisticControllerServlet</servlet-class>
    </servlet>
    <!--Servlet Mapping -->
    <servlet-mapping>
        <servlet-name>LoginControllerServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
        <url-pattern>/Login-Validate</url-pattern>
        <url-pattern>/Dashboard</url-pattern>
        <url-pattern>/Student-Dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserAccountControllerServlet</servlet-name>
        <url-pattern>/ManageManagerInfo</url-pattern>
        <url-pattern>/ManageManager</url-pattern>
        <url-pattern>/DeleteManagerInfo</url-pattern>
        <url-pattern>/ResetManager</url-pattern>
        <url-pattern>/ResetManagerInfo</url-pattern>
        <url-pattern>/ManageStudentInfo</url-pattern>
        <url-pattern>/ManageStudent</url-pattern>
        <url-pattern>/DeleteStudentInfo</url-pattern>
        <url-pattern>/ResetStudent</url-pattern>
        <url-pattern>/ResetStudentInfo</url-pattern>
        <url-pattern>/ManageAdminInfo</url-pattern>
        <url-pattern>/ManageAdmin</url-pattern>
        <url-pattern>/DeleteAdminInfo</url-pattern>
        <url-pattern>/ResetAdmin</url-pattern>
        <url-pattern>/ResetAdminInfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GuidelineControllerServlet</servlet-name>
        <url-pattern>/CurrentGuideline</url-pattern>
        <url-pattern>/AllGuidelines</url-pattern>
        <url-pattern>/ManageGuidelines</url-pattern>
        <url-pattern>/AddGuideline</url-pattern>
        <url-pattern>/DownloadGuideline</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GrievanceControllerServlet</servlet-name>
        <url-pattern>/CreateNewGrievance</url-pattern>
        <url-pattern>/PostNewGrievance</url-pattern>
        <url-pattern>/MyGrievances</url-pattern>
        <url-pattern>/PendingGrievance</url-pattern>
        <url-pattern>/AcceptGrievance</url-pattern>
        <url-pattern>/ProcessingGrievance</url-pattern>
        <url-pattern>/GrievanceChat</url-pattern>
        <url-pattern>/AssignChatMember</url-pattern>
        <url-pattern>/GrievanceChatAction</url-pattern>
        <url-pattern>/FinishedGrievance</url-pattern>
        <url-pattern>/GrievanceChatAction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FeedbackControllerServlet</servlet-name>
        <url-pattern>/Feedback</url-pattern>
        <url-pattern>/SubmitFeedback</url-pattern>
        <url-pattern>/ViewGivenFeedback</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StatisticControllerServlet</servlet-name>
        <url-pattern>/Statistics</url-pattern>
        <url-pattern>/ManagerPerformance</url-pattern>
        <url-pattern>/GrievanceStatistics</url-pattern>
    </servlet-mapping>
    <!--Welcome Files-->
    <welcome-file-list>
        <welcome-file>Login</welcome-file>
    </welcome-file-list>
    <!--    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>-->
</web-app>
